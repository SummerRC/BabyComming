<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical" >

    <RelativeLayout
        style="@style/title_bg"
        android:layout_width="fill_parent" >

        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#918eff"
            android:text="修改密码"
            android:textColor="#ffffff"
            android:textSize="22sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/set_pwd_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="" 
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:layout_margin="10dp"
        android:background="#ffffff"
        android:orientation="vertical" >

        <EditText 
            android:id="@+id/et_input_username"
            android:drawableLeft="@drawable/icon_username"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="false"
            android:focusableInTouchMode="false"
            android:drawablePadding="10dp"
            android:text="用户w123456"/>

      
        
        

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#E4E4E4" />

        <EditText 
            android:id="@+id/et_input_answer"
            android:drawableLeft="@drawable/icon_password"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="输入新密码"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#E4E4E4" />

        <EditText 
            android:id="@+id/et_input_answer_again"
            android:drawableLeft="@drawable/mine_icon_key"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="再输入新密码"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_commit"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@color/title_bg"
        android:text="提交"
        android:textColor="#ffffff"
        android:textSize="18sp" />

</LinearLayout>