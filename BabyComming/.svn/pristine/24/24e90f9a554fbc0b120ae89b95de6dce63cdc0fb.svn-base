<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEEF4"
    android:orientation="vertical" >

    <include
        android:id="@+id/select_linear"
        layout="@layout/zgq_title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/pingjia_iv"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/pingjia_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月嫂名字"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/pingjia_tv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="48岁"
                    android:textColor="#cecece" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#C3C3C3" />

                <TextView
                    android:id="@+id/pingjia_tv_jiguan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="黑龙江"
                    android:textColor="#cecece" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#C3C3C3"
                    android:textColor="#cecece" />

                <TextView
                    android:id="@+id/pingjia_tv_xueli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="高中"
                    android:textColor="#cecece" />
            </LinearLayout>

            <TextView
                android:id="@+id/pingjia_tv_dengji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月嫂等级" />

            <TextView
                android:id="@+id/pingjia_tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="工资标准" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="满意度：" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="false"
            android:numStars="5"
            android:progressDrawable="@drawable/ratingbar_bg"
            android:rating="0"
            android:stepSize="0.1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right" >

            <TextView
                android:id="@+id/pingjia_tv_pingfen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分" />
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/pingjia_et_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:gravity="top|left"
        android:hint="输入您的评价，将是其他用户的最重要参考。"
        android:lines="3"
        android:padding="10dp"
        android:textSize="13sp" />

    <Button
        android:id="@+id/btn_send"
        style="@style/zgq_btn_bg_and_text_color"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:text="发布" />

</LinearLayout>