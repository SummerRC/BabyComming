<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>

            <!-- 点击时按钮的背景颜色 -->
            <gradient android:angle="270" android:endColor="#f5f5f5" android:startColor="#f5f5f5" />
            <!-- 点击时按钮的边框颜色和宽度 -->
            <stroke android:width="0dp" android:color="#f5f5f5" />
            <!-- 圆角>1的时候有圆角 -->
            <corners android:radius="0dp" />

            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
        </shape></item>
    <item><shape>

            <!-- 没有点击时按钮的背景颜色 -->
            <gradient android:angle="270" android:endColor="#fae244" android:startColor="#fae244" />
            <!-- 没有点击时按钮的边框颜色和宽度 -->
            <stroke android:width="0dp" android:color="#fae244" />
            <!-- 圆角>1的时候有圆角 -->
            <corners android:radius="0dp" />

            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
        </shape></item>

</selector>