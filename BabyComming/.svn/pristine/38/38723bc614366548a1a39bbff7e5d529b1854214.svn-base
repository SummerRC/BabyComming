<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F2F2F2" >

    <TextView
        android:id="@+id/store_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="15dp"
        android:text="商家名称"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/man_yi_digree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/store_name"
        android:layout_below="@+id/store_name"
        android:layout_marginTop="12dp"
        android:text="满意度"
        android:textColor="#9393B2" />

    <RatingBar
        android:id="@+id/store_bar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/store_name"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/man_yi_digree" />

    <TextView
        android:id="@+id/store_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/store_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/store_bar"
        android:text="5.0分" />

    <TextView
        android:id="@+id/comment_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/store_name"
        android:layout_below="@+id/man_yi_digree"
        android:layout_marginTop="12dp"
        android:paddingBottom="10dp"
        android:text="总评价数    (65)"
        android:textColor="#9393B2" />

</RelativeLayout>