	}
	@Override
	public void onItemClick(AdapterView<?> arg0, View arg1, int arg2, long arg3) {
		// TODO Auto-generated method stub
		Intent intent=new Intent(getActivity(), TaoCanDetailActivity.class);
		startActivity(intent);
	}
}
