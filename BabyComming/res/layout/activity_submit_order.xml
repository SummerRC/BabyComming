<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2" >

    <include
        android:id="@+id/header"
        layout="@layout/common_title2" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/order_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="幸福baby特价套系"
                android:textSize="18sp" />

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="8dp"
                android:background="@null"
                android:src="@drawable/ic_right_back" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#F0EFF4" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/single_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="单价:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/single_price2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="8dp"
                android:text="￥599.00"
                android:textSize="18sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#F0EFF4" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="数量:"
                android:textSize="18sp" />
            
            <LinearLayout 
                android:background="@drawable/cursor5"
                android:orientation="horizontal"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginRight="8dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true">
                
                
                <Button 
                    android:id="@+id/delete"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="-"
                    android:background="@drawable/cursor7"/>
                
               <EditText 
                android:id="@+id/num_edit"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="@null"
                android:lines="1"
                android:maxLength="4"
               	android:gravity="center"/>
               
               <Button 
                    android:id="@+id/add"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="+"
                    android:background="@drawable/cursor6"/>
            </LinearLayout>
            
            
            
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#F0EFF4" />
         <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
             <TextView
                android:id="@+id/order_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="总价:"
                android:textSize="18sp" />
             
             
              <TextView
                android:id="@+id/order_total2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="8dp"
                android:text="￥0.00"
                android:textColor="#918eff"
                android:textSize="18sp" />
             
        </RelativeLayout>
    </LinearLayout>

    
    <Button 
        android:id="@+id/submit_order"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/linear"
        android:text="提交订单"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        style="@style/zgq_btn_bg_and_text_color"
        />
    
    
</RelativeLayout>